{
  "name": "resilience4u/r4policy-engine",
  "description": "Declarative resilience policy engine for PHP (R4PHP + YAML/JSON).",
  "type": "library",
  "license": "Apache-2.0",
  "autoload": {
    "psr-4": {
      "R4Policy\\": "src/"
    }
  },
  "require": {
    "php": "^8.2",
    "psr/log": "^3.0",
    "symfony/yaml": "^7.1",
    "symfony/console": "^7.1",
    "resilience4u/r4php": "@dev",
    "justinrainbow/json-schema": "^5.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "vimeo/psalm": "^5.26"
  },
  "repositories": [
    {
      "type": "path",
      "url": "/r4php"
    }
  ],
  "bin": ["bin/r4policy"]
}
